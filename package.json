{
  "name": "email_reminder",
  "version": "0.1.0",
  "private": true,
  "description": "Email reminder UI (Phase-1 client-only MVP)",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest --passWithNoTests",
    "emulator:start": "firebase emulators:start --only firestore --project demo",
    "emulator:test": "npm run emulator:start & sleep 2 && jest --runInBand --detectOpenHandles",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "deploy:pages": "npm run build && gh-pages -d dist",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "ci:visual": "npm run build && npx http-server ./dist -p 5173 & npx wait-on http://localhost:5173 && npx playwright test --project=chromium",
    "send-emails": "node scripts/send-pending-emails.js",
    "process-rules": "node scripts/process-rules.js"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "dompurify": "^3.0.7",
    "firebase": "^12",
    "firebase-admin": "^13.6.0",
    "formik": "^2.4.0",
    "luxon": "^3.4.0",
    "mustache": "^4.2.0",
    "nodemailer": "^7.0.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^8.48.0",
    "firebase-tools": "^12.6.0",
    "gh-pages": "^5.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.2",
    "vite": "^5.2.0",
    "wait-on": "^7.0.1"
  }
}
