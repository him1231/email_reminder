{
  "name": "email_reminder",
  "version": "0.1.0",
  "private": true,
  "description": "Email reminder UI (Phase-1 client-only MVP)",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest --passWithNoTests",
    "emulator:start": "firebase emulators:start --only firestore --project demo",
    "emulator:test": "npm run emulator:start & sleep 2 && jest --runInBand --detectOpenHandles",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "deploy:pages": "npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "dompurify": "^3.0.7",
    "firebase": "^9.23.0",
    "formik": "^2.4.0",
    "luxon": "^3.4.0",
    "mustache": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.48.0",
    "gh-pages": "^5.0.0",
    "jest": "^29.6.1",
    "prettier": "^3.12.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.2",
    "vite": "^5.2.0",
    "@testing-library/react": "^14.0.0",
    "firebase-tools": "^12.6.0"
  }
}
