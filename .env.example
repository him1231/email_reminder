# Frontend (public-safe keys - prefix with VITE_ for Vite exposure)
VITE_FIREBASE_API_KEY=<your-firebase-api-key>
VITE_FIREBASE_AUTH_DOMAIN=<your-firebase-auth-domain>
VITE_FIREBASE_PROJECT_ID=<your-firebase-project-id>
VITE_FIREBASE_MESSAGING_SENDER_ID=<messaging-sender-id>
VITE_FIREBASE_APP_ID=<firebase-app-id>

# Backend / CI (sensitive â€” put in GH Secrets or local .env for dev)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=<your@gmail.com>
SMTP_APP_PASSWORD=<app-password>
SENDER_EMAIL="Your App <no-reply@yourdomain.com>"

# Service account: put full JSON into FIREBASE_SERVICE_ACCOUNT (GH Secret) or
# set the following individual env vars in CI if preferred:
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":...}'   # DO NOT check into repo

# App settings
UNSUBSCRIBE_TOKEN_EXPIRY_DAYS=30
SCHEDULER_BATCH_SIZE=50
DEFAULT_TIMEZONE=UTC
